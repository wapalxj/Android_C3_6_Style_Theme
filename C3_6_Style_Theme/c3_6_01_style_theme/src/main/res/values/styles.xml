<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!--<style name="AppTheme" parent="@android:style/Theme.Holo.Dialog">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--</style>-->
    <!-- bubble Theme-->
    <style name="bubbleTheme" parent="Theme.AppCompat.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bubble</item>
    </style>
    <!-- blur Theme-->
    <style name="blurTheme" parent="Theme.AppCompat.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bubble</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--style-->
    <style name="style1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#0168cc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="style2" parent="style1">
        <item name="android:textSize">100sp</item>
    </style>
    <style name="style3" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="theme_null" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@null</item>
    </style>
</resources>
