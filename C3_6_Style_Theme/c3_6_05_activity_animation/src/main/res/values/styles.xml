<resources>

    <!-- Base application theme.parent=""-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AnimationTheme" >
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <!-- parent="Theme.AppCompat.Light.DarkActionBar-->
    <style name="AnimationThemeActivity" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/AnimationTheme</item>
        <item name="android:windowNoTitle">false</item>
    </style>
</resources>
